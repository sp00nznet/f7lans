# F7Lans Configuration

# Server
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/f7lans

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# HTTPS (optional)
ENABLE_HTTPS=false

# Email (optional - for invites)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Steam API (optional - for game integration)
STEAM_API_KEY=your-steam-api-key

# Federation (optional - connect multiple F7Lans servers)
FEDERATION_ENABLED=false
FEDERATION_SERVER_NAME=My F7Lans Server
FEDERATION_SERVER_URL=http://localhost:3001

# OAuth (optional)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_DISCORD_CLIENT_ID=
OAUTH_DISCORD_CLIENT_SECRET=
