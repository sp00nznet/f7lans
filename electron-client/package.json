{
  "name": "f7lans-client",
  "version": "1.0.0",
  "description": "F7Lans Desktop Client - Gaming Community Platform",
  "homepage": "https://github.com/sp00nznet/f7lans",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:embedded": "F7LANS_EMBEDDED_SERVER=true electron .",
    "start:headless": "F7LANS_HEADLESS=true F7LANS_EMBEDDED_SERVER=true electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:unified": "npm run copy-server && electron-builder --win -c electron-builder-unified.json",
    "build:win:headless": "npm run copy-server && electron-builder --win -c electron-builder-headless.json",
    "build:mac": "electron-builder --mac",
    "build:mac:unified": "npm run copy-server && electron-builder --mac -c electron-builder-unified.json",
    "build:linux": "electron-builder --linux",
    "build:linux:unified": "npm run copy-server && electron-builder --linux -c electron-builder-unified.json",
    "build:linux:headless": "npm run copy-server && electron-builder --linux -c electron-builder-headless.json",
    "copy-server": "node scripts/copy-server.js"
  },
  "build": {
    "appId": "com.f7lans.client",
    "productName": "F7Lans",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!scripts/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Network",
      "maintainer": "F7Lans <admin@f7lans.com>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "fs-extra": "^11.2.0"
  },
  "author": {
    "name": "F7Lans",
    "email": "admin@f7lans.com"
  },
  "license": "MIT"
}
