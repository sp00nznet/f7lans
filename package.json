{
  "name": "f7lans",
  "version": "1.0.0",
  "description": "F7Lans - Gaming Community Platform",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd client && npm start",

    "electron": "cd electron-client && npm start",
    "electron:embedded": "cd electron-client && npm run start:embedded",
    "electron:headless": "cd electron-client && npm run start:headless",

    "build:electron": "cd electron-client && npm run build",
    "build:electron:win": "cd electron-client && npm run build:win",
    "build:electron:mac": "cd electron-client && npm run build:mac",
    "build:electron:linux": "cd electron-client && npm run build:linux",

    "build:win:unified": "cd electron-client && npm run build:win:unified",
    "build:win:headless": "cd electron-client && npm run build:win:headless",
    "build:mac:unified": "cd electron-client && npm run build:mac:unified",
    "build:linux:unified": "cd electron-client && npm run build:linux:unified",
    "build:linux:headless": "cd electron-client && npm run build:linux:headless",

    "mobile:setup": "cd mobile && npm install",
    "mobile:init": "cd mobile && npm run cap:init && npm run cap:add:ios && npm run cap:add:android",
    "build:ios": "cd mobile && npm run build:ios",
    "build:android": "cd mobile && npm run build:android",
    "run:ios": "cd mobile && npm run run:ios",
    "run:android": "cd mobile && npm run run:android",

    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",

    "install:all": "npm install && cd electron-client && npm install && cd ../mobile && npm install"
  },
  "dependencies": {
    "@distube/ytdl-core": "^4.14.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "uuid": "^9.0.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": ["gaming", "community", "voice-chat", "video-chat", "discord-alternative"],
  "author": "F7Lans",
  "license": "MIT"
}
